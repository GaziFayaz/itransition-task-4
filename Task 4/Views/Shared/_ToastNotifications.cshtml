@{
    var toastMessages = new Dictionary<string, string>
    {
        { "SuccessMessage", "success" },
        { "ErrorMessage", "danger" },
        { "InfoMessage", "info" },
        { "WarningMessage", "warning" }
    };
}

<div class="toast-container position-fixed bottom-0 end-0 p-3">
    @foreach (var message in toastMessages)
    {
        if (TempData[message.Key] != null)
        {
            <div class="toast align-items-center text-bg-@message.Value border-0" role="alert" aria-live="assertive"
                 aria-atomic="true" data-bs-autohide="true" data-bs-delay="5000">
                <div class="d-flex">
                    <div class="toast-body">
                        @TempData[message.Key]
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                            aria-label="Close"></button>
                </div>
            </div>
        }
    }
</div>

<script>
    // Auto-show toasts on page load
    document.addEventListener('DOMContentLoaded', function () {
        var toastElList = [].slice.call(document.querySelectorAll('.toast'));
        var toastList = toastElList.map(function (toastEl) {
            return new bootstrap.Toast(toastEl);
        });
        toastList.forEach(toast => toast.show());
    });
</script>
